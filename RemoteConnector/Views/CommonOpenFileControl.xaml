<UserControl x:Class="RemoteConnector.Views.CommonOpenFileControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:RemoteConnector.Views"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300">
    <DockPanel>
        <Button Content="参照" Width="Auto" Margin="0" DockPanel.Dock="Right" Click="Button_Click" />
        <TextBox Name="PathBox" Text="{Binding Path, RelativeSource={RelativeSource FindAncestor, AncestorType={x:Type local:CommonOpenFileControl}}}" Margin="0" />
    </DockPanel>
</UserControl>
